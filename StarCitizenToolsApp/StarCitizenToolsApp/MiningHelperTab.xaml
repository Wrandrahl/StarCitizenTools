<UserControl x:Class="StarCitizenToolsApp.MiningHelperTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Background="#061119">
        <!-- Fond bleu nuit -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Zone d'entrée utilisateur -->
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Center">
            <TextBox x:Name="InputTextBox" Width="100" Height="25" Margin="0,0,0,10"
                     Background="#B0C4DE" Foreground="Black" KeyDown="InputTextBox_KeyDown" TextChanged="InputTextBox_TextChanged"/>
        </StackPanel>

        <!-- Zone de résultat avec texte au-dessus de l'image -->
        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="ResultTextBlock" FontSize="16" FontWeight="Bold" 
                       TextAlignment="Center" HorizontalAlignment="Center" 
                       Foreground="#B0C4DE" Margin="0,0,0,10"/>
            <!-- Texte bleu clair -->
            <Image x:Name="ResultImage" Width="100" Height="100"/>
        </StackPanel>
    </Grid>
</UserControl>
